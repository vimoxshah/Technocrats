<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <RelativeLayout
        android:id="@+id/layoutDados"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/drawer_icon"
            android:alpha="1"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drawer_itemName"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/drawer_icon"
            android:layout_toEndOf="@+id/drawer_icon"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:alpha="1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/counter"
            android:layout_toStartOf="@+id/counter"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="Roboto-Black"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/counter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:lines="1"
            android:maxLength="3"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"></TextView>

    </RelativeLayout>
</LinearLayout>