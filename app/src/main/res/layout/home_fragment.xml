<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:backgroundTintMode="add"
    android:backgroundTint="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fab.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/blue"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_addButtonStrokeVisible="true"
        android:layout_marginRight="18dp"
        android:backgroundTintMode="screen"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">


        <fab.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            fab:fab_colorNormal="#ffffff"
            fab:fab_stroke_visible="true"
            fab:fab_title="Online Apply"
            fab:fab_size="mini"
            android:focusable="true"
            fab:fab_icon="@drawable/ic_online"
            fab:fab_colorPressed="@color/white_pressed"/>
        <fab.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            fab:fab_colorNormal="#ffffff"
            fab:fab_size="mini"
            fab:fab_icon="@drawable/ic_scanner"
            fab:fab_title="Scanner"
            fab:fab_colorPressed="@color/white_pressed"/>


    </fab.FloatingActionsMenu>




