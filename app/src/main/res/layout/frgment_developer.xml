<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    android:backgroundTint="#69dbdbdb"
    android:background="#239d3636">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTintMode="add"
            android:backgroundTint="#69dbdbdb"
            android:background="#239d3636">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">



                <customimage.CircleImageView
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_my2"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="italic"

                android:fontFamily="Roboto-Thin"
                android:textColor="#f50a0005"
                android:textSize="18dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="  This App is Developed By Vimox S Shah " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="Roboto-Thin"
                android:textStyle="italic"
                android:layout_marginLeft="8dp"
                android:textColor="#f50a0005"
                android:textSize="18dp"

                android:text="  He is Currently Pursuing Computer\n  Engineering in Dharmsinh Desai University\n  Nadiad,Gujarat.He is Very Enthusiastic in\n  learning new things.Of course He is Android\n  Geek.Connect with him on Social Network. " />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <Button

            android:fontFamily="Roboto-Thin"
            android:id="@+id/img_f"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:background="@drawable/custom_fb"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="75dp"
            android:layout_marginBottom="5dp"
            android:text="  Facebook  " />


</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button

                    android:fontFamily="Roboto-Thin"
                    android:id="@+id/img_g"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_gplus"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginBottom="5dp"
                    android:text="  Google+ " />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >



                <Button

                    android:fontFamily="Roboto-Thin"
                    android:id="@+id/img_tw"
                    android:layout_width="200dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_twitter"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginBottom="5dp"
                    android:text="  Twitter " />
            </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button

            android:fontFamily="Roboto-Thin"
            android:id="@+id/img_l"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:background="@drawable/custom_linkdin"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="75dp"
            android:layout_marginBottom="5dp"
            android:text="  Linkedin " />
</LinearLayout>
            </LinearLayout>
    </ScrollView>


    </LinearLayout>

